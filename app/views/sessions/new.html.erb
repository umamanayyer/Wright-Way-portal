<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="row jusitfy-content-center">
    <div class="col-12">
        <%= form_with(scope: :session, url: login_path, local: true, class: 'shadow p-3 mb-3 bg-dark rounded') do |f| %>
      
        <div class="form-group row"> 
            <%= f.label :email, class: 'col-sm-2 col-form-label text-light'%>
            <div class="col-sm-10">
              <%= f.email_field :email, class: 'form-control shadow rounded', placeholder: 'Enter Email'  %>
            </div>
        </div>
        <div class="form-group row"> 
        <%= f.label :password, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control shadow rounded', placeholder: 'Enter Password'  %>
        </div>
    </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Login", class:'btn btn-outline-light btn-lg' %>
        </div>
        <% end %>
    </div>
  </div>
  
</div>

