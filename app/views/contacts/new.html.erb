
<div class="container">
<%= render 'shared/errors', obj: @contact %>
  <div class="box p-1 bg-info text-white">
      <h1 class="display-2 text-center bgr">Contact Us</h1>
  </div>
  
    <div class=" row jusitfy-content-center">
      <div class="col-12">
          <%= form_with(model: @contact, local: true, class: 'shadow p-4 mb-4 bg-dark rounded') do |f| %>
          <div class="form-group row" >
              <%= f.label :name, class: 'col-sm-2 col-form-label text-light'%>
              <div class="col-sm-10">
                <%=  f.text_field :name, class: 'form-control shadow rounded', placeholder: 'Enter your Name'  %>
              </div>
          </div>
          <div class="form-group row"> 
              <%= f.label :email, class: 'col-sm-2 col-form-label text-light'%>
              <div class="col-sm-10">
                <%=  f.text_field :email, class: 'form-control shadow rounded', placeholder: 'Enter your Email'  %>
              </div>
          </div>
          <div class="form-group row"> 
              <%= f.label :message, class: 'col-sm-2 col-form-label text-light'%>
              <div class="col-sm-10">
                <%= f.text_area :message, rows:10, as: :text, class: 'form-control shadow rounded', placeholder: 'Enter your message'  %>
              </div>
          </div>
          <div class="form-group row justify-content-center">
            <%=f.submit 'Send Message', class:'btn btn-outline-light btn-lg'  %>
          </div>
          <% end %>
      </div>
    </div>
 </div>

