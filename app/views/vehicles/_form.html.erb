<div class="container">
<%= render 'shared/errors', obj: @vehicle %>
  <div class="row jusitfy-content-center">
    <div class="col-12">
        <%= form_with(model: @vehicle, local: true, class: 'shadow p-3 mb-3 bg-dark rounded') do |f| %>
        <div class="form-group row"> 
            <%= f.label :registration, class: 'col-sm-2 col-form-label text-light'%>
            <div class="col-sm-10">
              <%= f.text_field :registration, class: 'form-control shadow rounded', placeholder: 'Enter Registartion' %>
            </div>
        </div>
        <div class="form-group row"> 
          <%= f.label :make, class: 'col-sm-2 col-form-label text-light'%>
          <div class="col-sm-10">
            <%= f.text_field :make, class: 'form-control shadow rounded', placeholder: 'Enter Make'  %>
          </div>
        </div>
        <div class="form-group row"> 
        <%= f.label :model, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.text_field :model, class: 'form-control shadow rounded', placeholder: 'Enter Model', required: 'true'  %>
        </div>
      </div>
      <div class="form-group row"> 
        <%= f.label :color, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.text_field :color, class: 'form-control shadow rounded', placeholder: 'Enter Color', required: 'true'  %>
        </div>
      </div>
      <div class="form-group row"> 
        <%= f.label :year, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.number_field :year, class: 'form-control shadow rounded', placeholder: 'Enter Year', required: 'true'   %>
        </div>
      </div>
      <div class="form-group row"> 
        <%= f.label :reg_expire, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.date_field :reg_expire, class: 'form-control shadow rounded', placeholder: 'Enter Registartion Expire date', required: 'true' %>
        </div>
      </div>
      <div class="form-group row"> 
        <%= f.label :wof_expire, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.date_field :wof_expire, class: 'form-control shadow rounded', placeholder: 'Enter W.O.F Expire date', required: 'true'%>
        </div>
      </div>
      <div class="form-group row"> 
        <%= f.label :service_due, class: 'col-sm-2 col-form-label text-light'%>
        <div class="col-sm-10">
          <%= f.date_field :service_due, class: 'form-control shadow rounded', placeholder: 'Enter Service due', required: 'true'   %>
        </div>
      </div>
    <div class="form-group row"> 
      <%= f.label :tyre_pressure, class: 'col-sm-2 col-form-label text-light'%>
      <div class="col-sm-10">
        <%= f.number_field :tyre_pressure, step: :any, class: 'form-control shadow rounded', placeholder: 'Enter Year', required: 'true'   %>
      </div>
    </div>
      
    

     

        
        <div class="form-group row justify-content-center">
          <%=f.submit(@vehicle.new_record? ? "Create New Vehicle" : "Update Vehicle", class:'btn btn-outline-light btn-lg')  %>
        </div>
        <% end %>
    </div>
  </div>
</div>



